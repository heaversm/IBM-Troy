#project-delays .title { position:absolute; top:40px; left:40px; }
#project-delays h1 { margin: 0; }
#project-delays h2 { margin: 15px 0 0 0; }

.slider{
	position: absolute;
}

.slider-container{ 
	position:absolute; top: 460px; left: 200px;cursor: pointer;
}
.slider {width: 180px; cursor: pointer;}
.ui-widget-content { background: #9198ae; }
.ui-state-default { background: #fff; }
.ui-slider { position: relative; }
.ui-slider .ui-slider-handle { outline: none; position: absolute; z-index: 2; width: 18.185%; height: .90em; cursor: default; -moz-border-radius: 8px; -webkit-border-radius: 8px; -khtml-border-radius: 8px; border-radius: 8px; }
.ui-slider .ui-slider-range { position: absolute; z-index: 1; display: block; background-position: 0 0; }
.ui-slider-horizontal { height: .432em; }
.ui-slider-horizontal .ui-slider-handle { top: -.3em; margin-left: -.6em; }
.ui-slider-horizontal .ui-slider-range { top: 0; height: 100%; }


.reasons .reason { height: 30px; line-height:30px; padding-left: 35px; max-width:150px; margin-top:5px; font-weight:bold; }
.reasons .reason.twoline { line-height:15px; }
.reasons .reason.alt { margin-top:15px; }
.reasons .troubleshooting { background:url('../images/project-delay/troubleshooting.png') no-repeat left center; }
.reasons .app { background:url('../images/project-delay/application.png') no-repeat left center; }
.reasons .infrastructure { background:url('../images/project-delay/infastructure.png') no-repeat left center; }
.reasons .middleware { background:url('../images/project-delay/middleware.png') no-repeat left center; }
.reasons .install { background:url('../images/project-delay/install.png') no-repeat left center; }
.reasons .deploy { background:url('../images/project-delay/deploy.png') no-repeat left center; }

